# Environment
ENVIRONMENT=dev
AWS_REGION=us-east-1

# LocalStack (for local development)
AWS_ENDPOINT_URL=http://localhost:4566
USE_LOCALSTACK=true

# AWS Configuration (will be different for production)
AWS_ACCOUNT_ID=000000000000

# Domain Configuration
PROJECT_DOMAIN=yourdomain.com
EMAIL_FROM_ADDRESS=project@yourdomain.com

# S3 Buckets
EMAIL_BUCKET=project-emails-dev

# DynamoDB Tables
PROJECTS_TABLE=ProjectTracking-Projects-dev
EVENTS_TABLE=ProjectTracking-Events-dev
USERS_TABLE=ProjectTracking-Users-dev

# SQS Queues
EMAIL_QUEUE_URL=http://localhost:4566/000000000000/email-processing-queue
EMAIL_DLQ_URL=http://localhost:4566/000000000000/email-processing-dlq

# SNS Topics
EMAIL_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:email-received

# Secrets Manager
OPENAI_API_KEY_SECRET=openai-api-key

# OpenAI Configuration (for local testing only - use Secrets Manager in production)
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL_EXTRACTION=gpt-4o-mini
OPENAI_MODEL_ESTIMATION=gpt-4o

# Lambda Configuration
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY=512

# Processing Configuration
MAX_ATTACHMENT_SIZE_MB=25
EMAIL_RETENTION_DAYS=90

# Security
ENABLE_EMAIL_ALLOWLIST=false
ALLOWED_SENDER_DOMAINS=

# Logging
LOG_LEVEL=INFO

